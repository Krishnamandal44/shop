<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="administrator.example.com.drawshoopin.Buy_Now">

    <ViewFlipper
        android:id="@+id/viewflipper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:autoStart="true"
        android:flipInterval="2000" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/card2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/card3" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:src="@drawable/card4"/>
        <ImageView
            android:background="@drawable/debitcard"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


    </ViewFlipper>


    <EditText
        android:id="@+id/cardno"
        android:hint="Card Number"
        android:inputType="phone"
        android:textSize="20dp"
        android:maxLength="13"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/cvv"
        android:hint="CVV"
        android:gravity="center"
        android:maxLength="3"
        android:inputType="phone"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/exdate"
        android:textSize="20dp"
        android:gravity="center"
        android:inputType="phone"
        android:maxLength="4"
        android:hint="Expiry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:id="@+id/confirm"
    android:layout_width="wrap_content"
    android:background="#0adef5"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <TextView

        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="PAY"
        android:gravity="right"
        android:layout_weight="1"
        android:background="#07f9d0"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rs"/>
    <TextView
        android:id="@+id/money"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:textSize="20dp"
        android:textColor="#00d"
        android:background="#07f9d0"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
</LinearLayout>







</LinearLayout>
